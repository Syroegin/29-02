<Page x:Class="Air.Pages.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Air.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FirstPage">

    <Grid>
        <DataGrid Name ="DGridTicket_sales" AutoGenerateColumns = "False" IsReadOnly = "True" Grid.Row="1" SelectionChanged="DGridTicket_sales_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding date}"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding SNP}"/>
                <DataGridTextColumn Header="Паспорт" Binding="{Binding Ps}"/>
                <DataGridTextColumn Header="номер" Binding="{Binding nomber}"/>
                <DataGridTextColumn Header="количество" Binding="{Binding quant}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
